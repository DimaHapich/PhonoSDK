<?xml version="1.0" encoding="UTF-8"?>

<sip-app xmlns="http://www.jcp.org/xml/ns/sipservlet" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.1" 
 xmlns:javaee="http://java.sun.com/xml/ns/javaee" 
 xsi:schemaLocation="http://www.jcp.org/xml/ns/sipservlet http://www.jcp.org/xml/ns/sipservlet/sip-app_1_1.xsd http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <app-name>gordon</app-name>
  <javaee:display-name>Gordon</javaee:display-name>

  <servlet>
    <javaee:servlet-name>gordonservlet</javaee:servlet-name>
    <javaee:servlet-class>com.voxeo.gordon.server.GordonSIPServlet</javaee:servlet-class>       
    <javaee:load-on-startup>1</javaee:load-on-startup>
    <init-param>
      <param-name>rtmpdUri</param-name>
      <param-value>http://127.0.0.1:8808/relay</param-value>
    </init-param>
  </servlet>

  <servlet-selection>
    <main-servlet>gordonservlet</main-servlet>
  </servlet-selection>

  <session-config>
    <javaee:session-timeout>10</javaee:session-timeout>
  </session-config>

</sip-app>
